@model CAPstone.Models.ParentsPreferenceSelectionEditorViewModel

@{
    ViewBag.Title = "Preferences";
}

<h2>Get started by choosing your preferences below:</h2>

@using (Html.BeginForm("SubmitSelected", "Preferences", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    <div>
        <input type="checkbox" id="checkall" /><span>Check All</span>
    </div>

    <div id="checkboxes">
        <table class="table">
            <tr>
                <th>
                    Select
                </th>
                <th>
                    Preferences
                </th>
                <th></th>
            </tr>
            @Html.EditorFor(model => model.Preferences)
        </table>
    </div>
    <hr />
    <br />
    <input type="submit" name="operation" id="submit" value="Submit Selected" />

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        function toggleChecked(status) {
            $("#checkboxes input").each(function () {
                $(this).prop("checked", status);
            });
        }

        $(document).ready(function () {

            $("#checkall").prop('checked', true);

            $("#checkall").click(function () {
                var status = $("#checkall").prop('checked');
                toggleChecked(status);
            });
        });
    </script>
}

